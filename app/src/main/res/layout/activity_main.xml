<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#358DCC"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ActivityFirst">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:layout_marginTop="52dp"
                android:layout_marginBottom="60dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/logo_2" />




            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">


                <Spinner
                    android:id="@+id/spin_city"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"

                    android:background="#fff"
                    android:minHeight="40dp"
                    android:overlapAnchor="false"
                    android:textSize="20sp"
                    tools:targetApi="lollipop" />

                <ImageView
                    android:id="@+id/img_gps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="14dp"
                    app:srcCompat="@drawable/gps_mark" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="14dp"
                    android:layout_height="8dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="12dp"
                    app:srcCompat="@drawable/arrrow_down" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="16dp">

                <Spinner
                    android:id="@+id/spin_scholl"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/white"
                    android:minHeight="40dp" />


                <ImageView
                    android:id="@+id/imageView101"
                    android:layout_width="14dp"
                    android:layout_height="8dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="12dp"
                    app:srcCompat="@drawable/arrrow_down" />

                <ImageView
                    android:id="@+id/img_hat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    app:srcCompat="@drawable/hat_for_spin" />

            </FrameLayout>


            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/press_btn_back"
                android:drawableRight="@drawable/press_btn_enter_image"
                android:enabled="false"

                android:fontFamily="@font/firasans_medium"
                android:paddingLeft="50dp"
                android:paddingRight="20dp"
                android:text="Далі"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@drawable/press_button_text_color"
                android:textSize="16sp" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fr_progres"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D8000000"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </FrameLayout>


    </FrameLayout>

</LinearLayout>